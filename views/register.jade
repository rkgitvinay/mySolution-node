doctype html
html(ng-app='myApp')
  head
    title= title
    script(src='javascripts/angular.min.js') 
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular-route.min.js') 
    script(src='javascripts/angular-script.js')
    ink(rel='stylesheet', href='stylesheets/style.css')   
    link(rel='stylesheet', href='stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='stylesheets/bootstrap.min.css')
  body(style='background-color:#292c2f;' ng-controller='registerCtrl')
    .container(style='margin-top:50px;')
      .row.centered-form
        .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
          .panel.panel-default
            .panel-heading
              h3.panel-title
                | Please sign up
                
            .panel-body
              form(role='form' ng-submit='register()')
                .row(style='margin-left:30%;')
                    .center-block
                      img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120', alt='')
                .row
                  .col-xs-12.col-sm-12.col-md-12
                    .form-group
                      input#first_name.form-control.input-sm(type='text', name='first_name', placeholder='First Name', required='', ng-model='formData.first_name')                      
                    .form-group
                      input#last_name.form-control.input-sm(type='text', name='last_name', placeholder='Last Name', required='',ng-model='formData.last_name')
                .form-group
                  input#email.form-control.input-sm(type='email', name='email', placeholder='Email Address',ng-model='formData.email')
                .row
                  .col-xs-6.col-sm-6.col-md-6
                    .form-group
                      input#password.form-control.input-sm(type='password', name='password', placeholder='Password', ng-model='formData.password')
                  .col-xs-6.col-sm-6.col-md-6
                    .form-group
                      input#password_confirmation.form-control.input-sm(type='password', name='password_confirmation', placeholder='Confirm Password', ng-model='formData.cnf_password')
                button#btn_register.btn.btn-lg.btn-primary.btn-block(type='submit') Register

